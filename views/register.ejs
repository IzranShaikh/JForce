<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body class="container"><br><br>
        <center><h1>Registration</h1></center>
        <form class="form" action="/auth/register" method="post">
            <input type="text" class="form-control" placeholder="Username" name="username" required /><br><br>
            <input type="password" class="form-control" placeholder="Password" name="password" maxlength="8" required /><br><br>
            <input type="email" class="form-control" placeholder="Email ID" name="email" required /><br><br>
            <input type="number" class="form-control" placeholder="Phone No" maxlength="10" name="phone" required /><br><br>
            <center><% if (message) { %>
                <p><%= message %></p>
              <% } %></center>
            <br>
            <center><a class="btn btn-primary" href="/auth/login">Login</a>&nbsp;&nbsp;&nbsp;
            <input class="btn btn-success" value="Register" type="submit"></center>
        </form>
    </body>
</html>