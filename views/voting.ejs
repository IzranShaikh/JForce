<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body class="container"><br><br>
        <center>
            <h3> <%= user %> </h3> &nbsp;&nbsp; <a href="/auth/logout" class="btn btn-danger">Logout</a> <br>
        </center>
        <% if (!voted) { %>
            <center><h1>Voting</h1></center>
            <center><form class="form" action="/vote" method="post">
            <input type="radio" id="candidate1" name="candidate" value="candidate1">
            <label for="candidate1">Candidate 1</label><br>
            <input type="radio" id="candidate2" name="candidate" value="candidate2">
            <label for="candidate2">Candidate 2</label><br>  
            <input type="radio" id="candidate3" name="candidate" value="candidate3">
            <label for="candidate3">Candidate 3</label><br>
            <input type="radio" id="candidate4" name="candidate" value="candidate4">
            <label for="candidate4">Candidate 4</label><br><br>
            <input type="submit" class="btn btn-success" value="Vote">&nbsp;&nbsp;&nbsp;
            </form></center>
            <%} else { %> <br>
                <center>
                    <h5>You Have Already Voted</h5>
                </center>
                <% } %>
        

    </body>
</html>